@{
    ViewData["Title"] = "Accueil";
}

<div class="container text-center">
    <div class="hero p-4 mb-4">
        <h1 class="display-4">Bienvenue à GestionSalle</h1>
        <p class="lead">Gérez vos membres, entraîneurs et paiements facilement.</p>
        <div class="d-flex justify-content-center gap-3 mt-4">
            <a asp-controller="Membres" asp-action="Index" class="btn btn-primary btn-lg">Voir les membres</a>
            <a asp-controller="Entraineurs" asp-action="Index" class="btn btn-outline-secondary btn-lg">Voir les entraîneurs</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card p-4 mb-3 text-center">
                <h4>Membres</h4>
                <p class="h2">@(Model ?? "—")</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-4 mb-3 text-center">
                <h4>Entraîneurs</h4>
                <p class="h2">—</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-4 mb-3 text-center">
                <h4>Paiements</h4>
                <p class="h2">—</p>
            </div>
        </div>
    </div>
</div>
