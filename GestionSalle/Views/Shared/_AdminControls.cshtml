@using Microsoft.AspNetCore.Mvc.ViewFeatures
@{
 // This partial renders the Create button for Admins, otherwise an info message.
}
@if (User?.IsInRole("Admin") ?? false)
{
 <a asp-action="Create" class="btn btn-success">Create New</a>
}
else
{
 <div class="alert alert-info">Seuls les administrateurs peuvent créer, modifier ou supprimer des éléments. Connectez-vous en tant qu'administrateur pour effectuer ces opérations.</div>
}