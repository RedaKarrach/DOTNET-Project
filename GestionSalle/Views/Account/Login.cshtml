@{
 ViewData["Title"] = "Login";
}

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
}

<div class="container" style="padding-top: 3rem; padding-bottom: 8rem; min-height: 70vh;">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
 <div class="card shadow-lg" style="margin-bottom: 5rem;">
    <div class="card-body p-5">
              <h1 class="text-center mb-4">
  <i class="fas fa-sign-in-alt"></i> Login
      </h1>
      
         <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
    
     <form asp-action="Login" method="post">
 <div class="mb-4">
   <label class="form-label">
    <i class="fas fa-user"></i> Username
           </label>
     <input name="username" class="form-control form-control-lg" 
       placeholder="admin" required />
  </div>
   
     <div class="mb-4">
 <label class="form-label">
     <i class="fas fa-lock"></i> Password
            </label>
      <input type="password" name="password" 
class="form-control form-control-lg" 
              placeholder="••••••••" required />
  </div>
     
   <div class="mb-4 form-check">
    <input type="checkbox" name="remember" 
       class="form-check-input" id="remember" />
     <label class="form-check-label" for="remember">
 Remember me
           </label>
            </div>
       
       <div class="d-grid gap-2 mb-4">
      <button type="submit" class="btn btn-primary btn-lg">
      <i class="fas fa-sign-in-alt"></i> Login
 </button>
        </div>
          </form>
 
<div class="alert alert-info mt-4">
        <h6 class="alert-heading">
    <i class="fas fa-info-circle"></i> Identifiants par défaut
  </h6>
        <p class="mb-1"><strong>Username:</strong> admin</p>
 <p class="mb-0"><strong>Password:</strong> Admin123!</p>
     </div>
        </div>
            </div>
 </div>
    </div>
</div>