@model GestionSalle.DTOs.EntraineurUpdateDto

@{
    ViewData["Title"] = "Modifier Entraîneur";
}

<h1>Modifier Entraîneur</h1>

<div class="row">
    <div class="col-md-6">
     <form asp-action="Edit" method="post">
       <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <input type="hidden" name="id" value="@ViewData["IdEntraineur"]" />
 
  <div class="mb-3">
    <label asp-for="NomComplet" class="form-label"></label>
       <input asp-for="NomComplet" class="form-control" />
   <span asp-validation-for="NomComplet" class="text-danger"></span>
            </div>
  
 <div class="mb-3">
    <label asp-for="Email" class="form-label"></label>
              <input asp-for="Email" class="form-control" type="email" />
  <span asp-validation-for="Email" class="text-danger"></span>
            </div>
          
<div class="mb-3">
    <label asp-for="Telephone" class="form-label"></label>
         <input asp-for="Telephone" class="form-control" type="tel" />
      <span asp-validation-for="Telephone" class="text-danger"></span>
  </div>
    
      <div class="mb-3">
    <label asp-for="Specialite" class="form-label"></label>
 <select asp-for="Specialite" class="form-control" asp-items="@(ViewData["Specialites"] as IEnumerable<SelectListItem>)">
     <option value="">-- Sélectionner une spécialité --</option>
     </select>
     <span asp-validation-for="Specialite" class="text-danger"></span>
      </div>
  
            @Html.AntiForgeryToken()
            
      <div class="mt-4">
      <button type="submit" class="btn btn-primary">💾 Enregistrer</button>
          <a asp-action="Index" class="btn btn-secondary ms-2">← Retour à la liste</a>
      </div>
  </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
