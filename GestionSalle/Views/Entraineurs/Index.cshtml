@model IEnumerable<GestionSalle.Models.Entraineur>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    @if (User?.IsInRole("Admin") ?? false)
    {
        <a asp-action="Create" class="btn btn-success">Create New</a>
    }
</p>

@if (!(User?.IsInRole("Admin") ?? false))
{
    <div class="alert alert-info">Seuls les administrateurs peuvent créer, modifier ou supprimer des entraîneurs.</div>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomComplet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Statut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdUtilisateurNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomComplet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Statut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUtilisateurNavigation.IdUtilisateur)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.IdEntraineur">Details</a>
                @if (User?.IsInRole("Admin") ?? false)
                {
                    <text> | </text>
                    <a asp-action="Edit" asp-route-id="@item.IdEntraineur">Edit</a>
                    <text> | </text>
                    <a asp-action="Delete" asp-route-id="@item.IdEntraineur">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
