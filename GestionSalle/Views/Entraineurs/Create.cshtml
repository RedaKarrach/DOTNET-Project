@model GestionSalle.DTOs.EntraineurCreateDto
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Créer un Entraîneur";
}

<h1>Créer un Entraîneur</h1>

<div class="row">
    <div class="col-md-6">
 <form asp-action="Create" method="post">
  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
 
     <div class="mb-3">
    <label asp-for="NomComplet" class="form-label"></label>
      <input asp-for="NomComplet" class="form-control" placeholder="Ex: Jean Dupont" />
    <span asp-validation-for="NomComplet" class="text-danger"></span>
          </div>
  
   <div class="mb-3">
    <label asp-for="Email" class="form-label"></label>
 <input asp-for="Email" class="form-control" type="email" placeholder="Ex: jean.dupont@example.com" />
 <span asp-validation-for="Email" class="text-danger"></span>
<small class="form-text text-muted">Un compte utilisateur sera créé automatiquement avec cet email</small>
  </div>
     
    <div class="mb-3">
   <label asp-for="Telephone" class="form-label"></label>
        <input asp-for="Telephone" class="form-control" type="tel" placeholder="Ex: +212 6 12 34 56 78" />
         <span asp-validation-for="Telephone" class="text-danger"></span>
  </div>
      
      <div class="mb-3">
  <label asp-for="Specialite" class="form-label"></label>
     <select asp-for="Specialite" class="form-control" asp-items="@(ViewData["Specialites"] as IEnumerable<SelectListItem>)">
   <option value="">-- Sélectionner une spécialité --</option>
      </select>
          <span asp-validation-for="Specialite" class="text-danger"></span>
</div>
            
 <div class="mt-4">
   <button type="submit" class="btn btn-success">💾 Créer l'Entraîneur</button>
      <a asp-action="Index" class="btn btn-secondary ms-2">← Retour à la liste</a>
     </div>
   </form>
 </div>
    
    <div class="col-md-6">
        <div class="alert alert-info">
    <h5>ℹ️ Information</h5>
 <p>Un compte utilisateur sera créé automatiquement pour cet entraîneur.</p>
      </div>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
