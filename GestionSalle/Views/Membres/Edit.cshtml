@model GestionSalle.DTOs.MembreUpdateDto
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Modifier un Membre";
}

<div class="container mt-4">
    <h1 class="mb-4">Modifier un Membre</h1>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
      <div class="card-body">
      <form asp-action="Edit" method="post">
      @Html.AntiForgeryToken()
             <input type="hidden" name="id" value="@ViewData["IdMembre"]" />
           <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

         <div class="row">
    <div class="col-md-6 mb-3">
        <label asp-for="NomComplet" class="form-label"></label>
              <input asp-for="NomComplet" class="form-control" placeholder="Ex: Marie Martin" />
       <span asp-validation-for="NomComplet" class="text-danger"></span>
       </div>

        <div class="col-md-6 mb-3">
     <label asp-for="Email" class="form-label"></label>
          <input asp-for="Email" class="form-control" type="email" placeholder="Ex: marie.martin@example.com" />
            <span asp-validation-for="Email" class="text-danger"></span>
     </div>
           </div>

     <div class="row">
           <div class="col-md-6 mb-3">
        <label asp-for="Telephone" class="form-label"></label>
             <input asp-for="Telephone" class="form-control" type="tel" placeholder="Ex: +212 6 12 34 56 78" />
          <span asp-validation-for="Telephone" class="text-danger"></span>
         </div>

        <div class="col-md-6 mb-3">
           <label asp-for="Sexe" class="form-label"></label>
 <select asp-for="Sexe" class="form-control">
        <option value="">-- Sélectionner --</option>
      <option value="Homme">Homme</option>
                <option value="Femme">Femme</option>
      <option value="Autre">Autre</option>
         </select>
     <span asp-validation-for="Sexe" class="text-danger"></span>
          </div>
     </div>

        <div class="mb-3">
         <label asp-for="Adresse" class="form-label"></label>
  <textarea asp-for="Adresse" class="form-control" rows="2" placeholder="Ex: 123 Rue Example, Casablanca"></textarea>
     <span asp-validation-for="Adresse" class="text-danger"></span>
      </div>

     <div class="row">
             <div class="col-md-6 mb-3">
           <label asp-for="IdPlan" class="form-label">Type de plan (optionnel)</label>
          <select asp-for="IdPlan" class="form-control" asp-items="@(ViewData["Plans"] as IEnumerable<SelectListItem>)">
  <option value="">-- Aucun plan --</option>
       </select>
    </div>

  <div class="col-md-6 mb-3">
      <label asp-for="IdEntraineur" class="form-label">Entraîneur (optionnel)</label>
          <select asp-for="IdEntraineur" class="form-control" asp-items="@(ViewData["Entraineurs"] as IEnumerable<SelectListItem>)">
        <option value="">-- Aucun entraîneur --</option>
 </select>
       </div>
            </div>

         <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
     <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
      <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
        </div>
      </form>
            </div>
     </div>
        </div>

      <div class="col-lg-4">
            <div class="alert alert-info">
 <h6 class="alert-heading">ℹ️ Information</h6>
    <p class="mb-0">Les modifications apportées au membre seront sauvegardées dans la base de données.</p>
</div>
        </div>
    </div>
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
