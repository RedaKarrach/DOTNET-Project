@model IEnumerable<GestionSalle.Models.Utilisateur>

@{
    ViewData["Title"] = "Utilisateurs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
    @TempData["Success"]
     <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
 </div>
}

@if (TempData["Error"] != null)
{
 <div class="alert alert-danger alert-dismissible fade show" role="alert">
    @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h1>Utilisateurs</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
<th>
        @Html.DisplayNameFor(model => model.NomUtilisateur)
   </th>
     <th>
     Mot de Passe
   </th>
 <th>
   @Html.DisplayNameFor(model => model.Role)
    </th>
      <th>
      @Html.DisplayNameFor(model => model.DateCreation)
 </th>
           <th></th>
       </tr>
      </thead>
     <tbody>
@foreach (var item in Model) {
       <tr>
  <td>
      @Html.DisplayFor(modelItem => item.NomUtilisateur)
   </td>
          <td>
    <span>••••••••</span>
         </td>
         <td>
     @Html.DisplayFor(modelItem => item.Role)
  </td>
     <td>
     @Html.DisplayFor(modelItem => item.DateCreation)
 </td>
     <td>
      <a asp-action="Details" asp-route-id="@item.IdUtilisateur" class="me-2">Details</a>
<a asp-action="Edit" asp-route-id="@item.IdUtilisateur" class="me-2">Edit</a>
       <a asp-action="Delete" asp-route-id="@item.IdUtilisateur" class="me-2 text-danger">Delete</a>
   </td>
        </tr>
}
 </tbody>
 </table>
</div>
